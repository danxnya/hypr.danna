{

    "output":"HDMI-A-1",
    "layer": "top",
    "position": "top",
    "height": 20,
    "exclusive": true,
    "passthrough": false,
    "gtk-layer-shell": true,
    "reload_style_on_change": true,

    "margin-top": 0,
    "margin-left": 0,
    "margin-bottom": 2,
    "margin-right": 0,



// positions
	"modules-left": [
        //"image#arch",          // arch logo
        "hyprland/workspaces",  // workspaces
        
        "tray",

        "custom/paddw"
        // "hyprland/window"       // window title
        
    ],
	"modules-center": [
        "custom/playerlabel"   // music
    ],

	"modules-right": [

        //"custom/cpuinfo",       // temperature
        
        //"memory",               // memory
        
        //"cpu",                  // cpu

        // "custom/swww",          // wallVpaper auto changer

        //"bluetooth",            // bluetooth

        "custom/wifi",          // connection

        "backlight",            // brightness
        
        "clock#time",           // time

        "clock#date",           // date

        "pulseaudio",           // output device

        "battery",              // battery

        "custom/power"          // power button
    ],

// modules

    "image#arch": {
        "path": "/home/dam/.config/waybar/arch.png",
        "size": 18,
        "on-click": "~/.config/hypr/scripts/hyprswitch.sh"
      },


    "custom/ws": {
        "format": " ",
        "tooltip": false
    },

    "hyprland/workspaces": {
        "disable-scroll": true,
        "all-outputs": true,
        "on-click": "activate",
        "format":" {icon} ",
        "persistent-workspaces": {
            "*": 1
          }
    },

    // "hyprland/workspaces": {
    //     "all-outputs": true,
    //     "persistent-workspaces": {
    //       "*": 1
    //     }
    //   },


        "bluetooth": {
        "format": "󰂯",
        "on-click": "/home/dam/.config/waybar/scripts/bluetooth.sh"
        },





    "hyprland/window": {
        "format": "Dam > Hyprland",
        "tooltip": false
    },

    "tray": {
        "spacing": 10
    },

    "custom/line": {
        "format": "|",
        "tooltip": false
    },


    "custom/cpuinfo": {
        "exec": "~/.config/waybar/scripts/cpuinfo.sh",
        "return-type": "json",
        "format": " {} ",
        "tooltip": true
    },

    "memory": {
        "states": {"c": 90},
	    "format": "󰘚 {percentage}%",
	    "format-c": "󰀪 {percentage}%",
        "tooltip": true,
        "tooltip-format": "{used:0.1f}GB / {total:0.1f}GB",
        "interval": 20,
        "min-length": 7,
        "max-length": 7
    },

    "cpu": {
        "format": "󰻠 {usage}%",
        "tooltip": false,
        "interval": 5,
        "min-length": 6,
        "max-length": 6
    },


    "clock#time": {
        "format": "{:%I:%M}",
        "tooltip-format": "{date}"
    },

    "clock#date": {
        "format": "{:%m/%d}",
        "tooltip-format": "<tt>{calendar}</tt>",
        "calendar": {
            "mode": "month",
            "mode-mon-col": 3,
            "on-click-right": "mode",
            "format": {
                "months": "<span color='#f5e0dc'><b>{}</b></span>",
                "weekdays": "<span color='#f9e2af'><b>{}</b></span>",
                "today": "<span color='#f38ba8'><b>{}</b></span>"
            }
        },
        "actions": {"on-click-right": "mode"},
        "min-length": 8,
        "max-length": 8
	},

    // These scripts use rofi. If you use dmenu, you will need to create your own script.
    "custom/wifi": {
        "exec": "~/.config/waybar/scripts/network-status.sh",
        "interval": 30,
        "format": "󰢾",  // use "{}" to display your network name
        "tooltip": true,
        "tooltip-format": "192.168.1.73",
        "on-click": "~/.config/waybar/scripts/network-menu.sh",
    },

    "custom/playerlabel": {
        "format": "{}",
        "return-type": "json",
        "max-length": 50,
        "exec": "playerctl -a metadata --format '{\"text\": \"{{artist}} : {{markup_escape(title)}}\", \"tooltip\": \"{{playerName}} : {{markup_escape(title)}}\", \"alt\": \"{{status}}\", \"class\": \"{{status}}\"}' -F",
        "on-click-middle": "playerctl play-pause",
        "on-click": "playerctl previous",
        "on-click-right": "playerctl next",
        "tooltip": false
      },



      "pulseaudio": {
        //"format": "{icon} {volume}%",
        //"format-muted": "婢 {volume}%",
        "format": "{volume}",
        "format-icons": {
            "headphone": "󰋋",
            "default": ["󰖀", "󰕾"]
        },
        "on-click": "pavucontrol"
    },



    "backlight": {
        "device": "intel_backlight",
        //"format": "{icon} {percent}%",
        "format": "{icon}",
        "format-icons": ["", "", "", "", "", "", "󱔀", "󰝤"],
        //"format": "{percent}",
        "tooltip": false,
        "on-scroll-up": "brightnessctl set 5%+",
        "on-scroll-down": "brightnessctl set 5%-"
    },

    "battery": {
        "states": {
            "good": 95,
            "warning": 30,
            "critical": 20
        },
        //"format": "{capacity} {icon}",
        // "format-icons": ["", "", "", "", ""],
        //"format-icons": ["󰂎", "󰁺", "󰁻", "󰁼", "󰁽", "󰁾", "󰁿", "󰂀", "󰂁", "󰂂", "󰁹"],
        "format": " {capacity}% ",
        "format-charging": "{capacity}%",
        "format-plugged": "{capacity}%",
        "tooltip-format": "{time}",
	    "interval": 1,
        "min-length": 6,
        "max-length": 6
    },

    "custom/power": {
        "format": "<span font='10'></span>",
        "tooltip": false,
        "on-click": "bash ~/.config/waybar/scripts/power-menu/powermenu.sh",
        "on-click-right": "logoutlaunch.sh 1",
        "interval" : 86400
    },

//padding
    "custom/paddl": {
        "format": " ",
        "tooltip": false
    },
    "custom/paddw": {
        "format": " ",
        "tooltip": false
    },

    // Adjust this if you have a long network name so that the modules are centered.
    "custom/paddc": {
        "format": "   ",
        "tooltip": false
    },
    "custom/paddr": {
        "format": "",
        "tooltip": false
    },

    "custom/swww": {
        "format": "<span font='12'></span>",
        "on-click": "bash ~/.config/waybar/scripts/swww.sh",
        "tooltip": false
    }
}


